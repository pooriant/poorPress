<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/image_adress_new"
        android:layout_width="412dp"
        android:layout_height="248dp"/>



    <TextView
        android:id="@+id/title_text_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_adress_new"
        style="@style/titleViewMainFrame"
        tools:text="@string/sample_Title_Text"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="technology"
        android:background="@color/backgroundTitleColor"
        android:layout_above="@+id/title_text_new"
        android:textColor="#aaffffff"
        android:padding="4dp"
        android:id="@+id/title_section_name"
        android:textAllCaps="true"
       />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       style="@style/timeAndDateFrameStyle"
>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:paddingRight="2dp"
            android:src="@drawable/ic_clock_white_18dp"/>

        <TextView
            android:id="@+id/time_and_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:textColor="@color/titleTextColorLight"
            android:textSize="13sp"
            tools:text="05,jun 12:30"

            />


    </LinearLayout>

</RelativeLayout>