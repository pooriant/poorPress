<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemecontent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textViewInfoDesign">
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">15sp</item>
    </style>

<style name="textViewStyle">
    <item name="android:layout_margin">4dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
<item name="android:textSize">16sp</item>
    <item name="android:lineSpacingExtra">2.5dp</item>
    <item name="android:textColor">@color/mainTextColor</item>
</style>


    <style name="titleViewStyle" >
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textColor">@color/titleTextColorDark</item>
    </style>

    <style name="subtitleViewStyle">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">2dp</item>
   <item name="android:textSize">16sp</item>
   <item name="android:layout_gravity">center</item>
   <item name="android:textColor">@color/disabledHintTextColorDark</item>
    </style>

    <style name="titleViewMainFrame">
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/titleTextColorLight</item>
<item name="android:background">@color/backgroundTitleColor</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
  </style>


    <style name="timeAndDateFrameStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>

        <item name="android:layout_marginTop">98dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>

    </style>


</resources>
